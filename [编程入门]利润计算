#include <stdio.h>
int main() {
    int p,a;
    scanf("%d", &p);
    if (p <= 100000) a = p * 0.1;
    if (p > 100000 && p <= 200000) a = 10000 + (p - 100000) * 0.075;
    if (p > 200000 && p <= 400000) a = 17500 + (p - 200000) * 0.05;
    if (p > 400000 && p <= 600000) a = 27500 + (p - 400000) * 0.03;
    if (p > 600000 && p < 1000000) a = 33500 + (p - 600000) * 0.015;
    if (p > 1000000)a = 39500 + (p - 1000000) * 0.01;
    printf("%d", a);
    return 0;

}
